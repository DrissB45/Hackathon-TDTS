{% extends "layout.html.twig" %}

{% block content %}

	<form method="post" action="">

		<h2 class="text-center my-5">De quel climat aimeriez-vous profiter ?</h2>
		<div class="container">
			<div class="row text-center mb-2">
				<div class="col-4">
					<img src="assets/images/winter.jpeg" class="rounded">
					<input type="radio" name="q1" value="1">
					Climat hivernal
				</div>
				<div class="col-4">
					<img src="assets/images/tempere.jpeg" class="rounded">
					<input type="radio" name="q1" value="2">
					Climat tempéré
				</div>
				<div class="col-4">
					<img src="assets/images/summer.jpeg" class="rounded">
					<input type="radio" name="q1" value="3">
					Climat estival
				</div>
			</div>
		</div>

		<h2 class="text-center my-5">Préférez-vous un pays proche ou lointain ?</h2>
		<div class="container">
			<div class="row text-center">
				<div class="col-4 mb-2">
					<img src="assets/images/barcelone.jpeg" class="rounded">
					<input type="radio" name="q2" value="1">
					Pays voisin
				</div>
				<div class="col-4">
					<img src="assets/images/maroc.jpeg" class="rounded">
					<input type="radio" name="q2" value="2">
					Pays assez proche
				</div>
				<div class="col-4">
					<img src="assets/images/krabi.jpeg" class="rounded">
					<input type="radio" name="q2" value="3">
					Pays lointain
				</div>
			</div>
		</div>

		<h2 class="text-center my-5">Quelles activités voulez-vous pratiquer ?</h2>
		<div class="container">
			<div class="row text-center mb-2">
				<div class="col-4">
					<img src="assets/images/culture.jpeg" class="rounded">
					<input type="radio" name="q3" value="1">
					Culture
				</div>
				<div class="col-4">
					<img src="assets/images/massaman.jpeg" class="rounded">
					<input type="radio" name="q3" value="2">
					Cuisine
				</div>
				<div class="col-4">
					<img src="assets/images/randonneur.jpeg" class="rounded">
					<input type="radio" name="q3" value="3">
					Activités d'extérieur
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-center my-5">
			<button type="submit">Découvrir quel pays est fait pour moi</button>
		</div>
	</form>

	<div class="d-flex justify-content-center">
		<h3>Voici votre destination idéale : 
        <a href="/">{{result}}</a>
	</div>

    {{result}}

{% endblock %}
